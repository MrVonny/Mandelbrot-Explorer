<Window x:Class="Mandelbrot_Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mandelbrot_Explorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Right" MinWidth="250">
                <StackPanel Orientation="Vertical" Margin="10">
                    <Button Content="Start" Click="Button_Start" Margin="5"></Button>
                    <StackPanel Orientation="Horizontal">
                        <Label>Coordinates:</Label>
                        <TextBox x:Name="textbox_xpos" MinWidth="50" Margin="5" Text="0"/>
                        <TextBox x:Name="textbox_ypos" MinWidth="50" Margin="5" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>Width:</Label>
                        <TextBox x:Name="textbox_width" MinWidth="50" Margin="5" Text="2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>Max Iterrations:</Label>
                        <TextBox x:Name="textbox_iter" MinWidth="50" Margin="5"  Text="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>Resolution:</Label>
                        <TextBox x:Name="textbox_res" MinWidth="50" Margin="5" Text="500"/>
                    </StackPanel>
                    <Button Margin="5" Click="Button_Save">Save</Button>
                </StackPanel>
            </Grid>
            <Grid >
                <Image x:Name="FractalImage">
                    
                </Image>
            </Grid>
        </DockPanel>
        
    </Grid>
</Window>
